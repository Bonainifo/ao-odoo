<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_rma_form" model="ir.ui.view">
            <field name="name">rma.order.form</field>
            <field name="model">rma.order</field>
            <field name="inherit_id"
                   ref="rma.view_rma_form"/>
            <field name="arch" type="xml">
                <field name="comment" position="before">
                    <field name="originating_helpdesk_id"/>
                </field>
                <field name="rma_line_ids" position="attributes">
                    <attribute name="context">{'default_helpdesk_id': originating_helpdesk_id}</attribute>
                </field>
            </field>
        </record>

        <record id="view_rma_line_form" model="ir.ui.view">
            <field name="name">rma.order.line.form</field>
            <field name="model">rma.order.line</field>
            <field name="inherit_id"
                   ref="rma.view_rma_line_form"/>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="helpdesk_id"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
