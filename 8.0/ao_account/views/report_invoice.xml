<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

        <template id="report_invoice_document"
                  inherit_id="account.report_invoice_document">
        <xpath expr="//p[@t-if='o.fiscal_position.note']" position="after">
            <div t-if="o.type == 'out_invoice'">
                <tr>
                    <td>All Payments to be made in US Dollars.<br/></td>
                    <td>$25.00 Wire Fee Charge added to all International Wire Transactions.<br/></td>
                </tr>
            </div>
        </xpath>

        <xpath expr="//div[@t-if='o.partner_id.ref']" position="attributes">
            <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//div[@t-if='o.reference']" position="attributes">
            <attribute name="invisible">True</attribute>
        </xpath>

    </template>

</data>
</openerp>
